@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@model BlackJackGame.Models.BlackJack
@{
    ViewData["Title"] = "Index";

}
@{ 
//BlackJackCard c;
//int suit = (int)c.Suit;
//int value = (int)c.FaceValue;
//int kaartnummer = (((int) - 1) * 13) + value - 1;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>BlackJack</title>

    <link href="~/css/BJ.css" rel="stylesheet" />
</head>
<body>
    <div id="playGround">
        <h1>@Model.GameState</h1>
        <p class="hand">
        @foreach (var c in @Model.DealerHand.Cards) {
            if (c.FaceUp) {<img src="~/images/kaart@((((int)c.Suit-1)*13)+(int)c.FaceValue-1).gif" />}
            else { <img src="~/images/kaartback.gif" />}

        }
            <span class="total">Dealerhand = @Model.DealerHand.Value</span>
        </p>
        <p class="hand">
            @foreach (var c in @Model.PlayerHand.Cards) {
                if (c.FaceUp) {<img src="~/images/kaart@((((int)c.Suit-1)*13)+(int)c.FaceValue-1).gif" />}
                else { <img src="~/images/kaartback.gif" />}

            }
            <span class="total">Player hand = @Model.PlayerHand.Value</span>
        </p>
        
        @if ( (int)@Model.GameState != 1) {
        <a asp-controller="Home" asp-action="NextCard">Card</a>
        <a asp-controller="Home" asp-action="Pass">Pass</a>
        }
        else {
        <a asp-controller="Home" asp-action="Index">New Game</a>
        }

    </div>
</body>
</html>


